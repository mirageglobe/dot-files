# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Tab indentation
[Makefile]
indent_style = tab

# 2 space indentation for various formats
[{package.json,.travis.yml,*.json,*.yml,*.yaml,*.md}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4
